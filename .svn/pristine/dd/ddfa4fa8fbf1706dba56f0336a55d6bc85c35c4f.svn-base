<script>
  export default {
    name: "creditIndex",
    data() {
      return {
        isUnreviewed: false,
        mycredit: '',
        mycredit_str: '',
        ifTipJie: false,
        isGroup: '',
        tipTitle: '',
        isLoading: false,
        isFirst: false,
        isResult: false,
      };
    },
    created() {
      let isRefresh = this.$route.query.isRefresh; // 1不刷新 2或者undefined刷新
        console.log(isRefresh);
      if (isRefresh != 1) {
          this.isLoading = true;
      }
      this.getmycredit()
    },
    methods: {
      goPath(path){
        this.$router.push({
        path: path,
        query: {
          lastPath: "/creditScore",
        }
      });
      },
      leftBack() {
        this.$router.push('/');
      },
      insideMark() {
        let that = this;
        let is_group = '';
        that.$api.creditistc({}).then(res => {
          if (res.errno == 0) {
            //is_c 是否加入合作社 is_team 是否加入团队 1加入 2未加入 
            if (res.data.is_c == 2 && res.data.is_team == 2) {
              that.tipTitle = '未加入合作社组织或团体<br /> 不能进行团体人员打分';
              that.ifTipJie = true;
            } else {
              //is_group  1社员2团队
              if (res.data.is_c == 1 && res.data.is_team == 2) {
                console.log('合作社成员');
                is_group = 1;
              } else if (res.data.is_c == 2 && res.data.is_team == 1) {
                console.log('团队成员');
                is_group = 2;
              } else if (res.data.is_c == 1 && res.data.is_team == 1) {
                console.log('团队成员');
                is_group = 2
              }
              that.isGroup = is_group;
              that.getTeamLists()
            }
          } else {
            that.$toast(res.errmsg)
          }
        }).catch(err => {})
      },
      getTeamLists() {
        let that = this;
        that.$api.teamLists({
          type: that.isGroup
        }).then(res => {
          if (res.errno == 0) {
            if (res.data.length > 0) {
                that.$router.push({
                    path:'/eachOthers',
                    query: {
                       is_group: that.isGroup,
                      lastPath: "/creditScore",
                    }
                  });
            }else {
              that.tipTitle = '没有可评分成员';
              that.ifTipJie = true;
            }
          } else {
            that.tipTitle = res.errmsg;
            that.ifTipJie = true;
          }
        }).catch(err => {

        })
      },
      // 查看分数
      getmycredit() {
        let that = this;
        that.$api.mycredit({}).then(res => {
          setTimeout(() => {
            that.isLoading = false;
          }, 2000)
          if (res.errno == 0) {
            if(res.data.arr == 600 ){
                that.mycredit = res.data.arr;
                that.mycredit_str = res.data.str;
                that.isFirst = true;
            }else {
                that.mycredit = res.data.arr;
                that.mycredit_str = res.data.str;
               that.isFirst = false;
              that.isUnreviewed = true;
            }
          } else  if (res.errno == 1) {
            that.isUnreviewed = true;
            that.isResult = true;
         } else {
            that.isUnreviewed = false;
            that.$toast(res.errmsg)
          }
        }).catch(err => {})
      },
      clickAgain(){
        this.$toast('您的信息已提交，无需重复提交')
      }
    },
  }
</script>

