			formatDate(date) {
				return `${date.getFullYear()}-${date.getMonth() + 1}-${date.getDate()}`;
			},
			onConfirmDate(date) {
				this.selectDate = false;
				this.dateBirth = this.formatDate(date);
			},
			// 民族
			nationLi() {
				this.$api.nation().then(res => {
					if (res.errno == 0) {
						this.nationList = res.data;
