<script>
	export default {
		name: "accountIndex",
		data() {
			return {
				walletNum: {
					wallet: 0, // 账户余额
					all_profit: 0, //总收益
					new_profit: 0, // 最新收益
					bank_count: 0, //银行卡数 
					coopera_count: 0, //合作社个数
				},
			};
		},
		mounted() {
			window.leftBack = this.leftBack;
			this.userWallet(); // 账户管家资产和收益
		},
		methods: {
			leftBack() {
				// this.$router.go(-1);
				this.$router.replace('/')
			},
			// 账户管家资产和收益
			userWallet(){
				this.$toast.loading({
					message: '加载中...',
					forbidClick: true,
					duration: 0,
				});
				this.$api.user_wallet({}).then(res => {
					this.$toast.clear()
					if (res.errno == 0) {
						this.walletNum = res.data;	
					} else {
						this.$toast(res.errmsg)	
					}

				}).catch(err=>{
					this.$toast.clear()
				})
			},
			// 转出
			goOut(){
				this.$router.push({
					path: '/accouOut',
					query: {
						wallet: this.walletNum.can_out_wallet
					}
				})
			},
		}
	}
