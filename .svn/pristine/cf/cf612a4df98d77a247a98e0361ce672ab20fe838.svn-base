<template>
	<div class="forgetPasw" :style='{height: deviceHeight + "px"}'>
		<div class="topTitle">
			<img src="../images/xiexianBg.png" class="bgxiexian" />
			<img src="../images/forgetpTitle.png" class="leftImg" />
			<img src="../images/forgetpIcon.png" class="rightImg" />
		</div>
		<van-cell-group>
			<van-field v-model="phone" clearable label="手机号" :left-icon="require('../images/phone.png')"
				placeholder="请输入手机号" />

			<van-field v-model="phoneCode" clearable label="手机验证码" :left-icon="require('../images/msg.png')">
				<template v-if="showCodeBtn" #right-icon>
					<p @click="getCode">发送验证码</p>
				</template>
				<template v-else #right-icon>
					<p>{{times}}秒</p>
				</template>
			</van-field>
			<van-field v-model="password1" clearable type="password" label="新密码" :left-icon="require('../images/phone.png')"
				placeholder="请输入新密码" />
			<van-field v-model="password2" clearable type="password" label="确认新密码" :left-icon="require('../images/phone.png')"
				placeholder="请再次输入新密码" />
			<br />
		</van-cell-group>

		<p class="applyBtn" @click.stop="apply()">确定</p>


	</div>
</template>
<script>
	export default {
		name: "forgetPasw",
		data() {
			return {
				deviceHeight: document.body.clientHeight - 115,
				phone: '',
				times: 180,
				showCodeBtn: true,
				phoneCode: '',
				password1: '',
				password2: ''
			};
		},
		mounted() {
			window.leftBack = this.leftBack;
		},
		methods: {
			leftBack() {
				this.$router.go(-1);
			},
			// 发送验证码
			getCode() {
				if (this.$validatePhone(this.phone) != true) {
					this.$toast(this.$validatePhone(this.phone))
					return
				}
				this.$api.get_code({
					phone: this.phone
				}).then(res => {
					if (res.errno == 0) { // 启用倒计时
						this.showCodeBtn = false
						this.timer = setInterval(() => {
							this.times--
							if (this.times === 0) {
								this.times = 180
								this.showCodeBtn = true
								clearInterval(this.timer)
							}
						}, 1000)
					} else {
						this.$toast(res.errmsg)
					}
				}).catch(err => {

				})
			},
			apply() {
				if (this.$validatePhone(this.phone) != true) {
					this.$toast(this.$validatePhone(this.phone))
					return
				}
				if (this.phoneCode.trim().length == 0) {
					this.$toast("请输入手机验证码")
					return
				}
				if (this.password1.trim().length == 0) {
					this.$toast("请输入新密码")
					return
				}
				if (this.password2.trim().length == 0) {
					this.$toast("请再次输入新密码")
					return
				}
				let data = {}
				data.phone = this.phone 
				data.code = this.phoneCode // 短信验证码
				data.password = this.$md5(this.password1)
				data.confirm_password = this.$md5(this.password2)
				this.$api.forget_pwd(data).then(res => {
					this.$toast(res.errmsg)
					if (res.errno == 0) {
						setTimeout(()=>{
							this.$router.replace('/login')
						}, 1000)
					}
				}).catch(err => {

				})
			},


		},


	}
</script>
